/**
 * Implements hook_event_log_handlers().
 * @return array
 */
function event_log_node_event_log_handlers() {
  // Node event log handler.
  $handlers = array();
  $handlers['node'] = array(
    'title' => t('Node'),
    'relationships' => array(
      array(
        'table' => 'node',
        'field' => 'nid',
        'operations' => NULL,
        'numeric' => TRUE,
      ),
    ),
  );
  return $handlers;
}

/**
 * Implements hook_node_insert().
 */
function event_log_node_insert($node) {
  $log = array(
    'type' => 'node',
    'operation' => 'insert',
    'description' => t('Insert %type node %title', array('%type' => $node->type, '%title' => $node->title)),
    'ref_numeric' => $node->nid,
  );
  event_log_insert($log);
}

/**
 * Implements hook_node_update().
 */
function event_log_node_update($node) {
  $log = array(
    'type' => 'node',
    'operation' => 'update',
    'description' => t('Update %type node %title', array('%type' => $node->type, '%title' => $node->title)),
    'ref_numeric' => $node->nid,
    'info' => $node->original,
  );
  event_log_insert($log);
}

/**
 * Implements hook_node_delete().
 */
function event_log_node_delete($node) {
  $log = array(
    'type' => 'node',
    'operation' => 'delete',
    'description' => t('Delete %type node %title', array('%type' => $node->type, '%title' => $node->title)),
    'ref_numeric' => $node->nid,
    'info' => $node,
  );
  event_log_insert($log);
}

/**
 * Implements hook_init().
 */
function event_log_node_init() {
  $item = menu_get_item();
  if (!empty($item['page_callback']) && $item['page_callback'] == 'node_page_view') {
    $node = $item['page_arguments'][0];
    if (!empty($node)) {
      $log = array(
        'type' => 'node',
        'operation' => 'view',
        'description' => t('View node %title', array('%title' => $node->title)),
        'ref_numeric' => $node->nid,
      );
      event_log_insert($log);
    }
  }
}
